{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"baseUrl": ".",
		"strictNullChecks": true,
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@styles/*": ["src/styles/*"],
			"@images/*": ["src/images/*"]
		},
		"plugins": [{ "name": "@astrojs/ts-plugin" }]
	}
}

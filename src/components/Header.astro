---
const { pathname } = Astro.url;

interface Props {}

interface NavLink {
	label: string;
	icon: string;
	path: string;
}

const navLinks: NavLink[] = [
	{ label: 'Blog', icon: 'pen', path: '/' },
	{ label: 'About', icon: 'person', path: '/about/' },
	{ label: 'Now', icon: 'clock', path: '/now/' },
];
---

<header>
	<h1>ghall.blog</h1>
	<nav>
		{
			navLinks.map((link) => (
				<li class={pathname === link.path ? 'selected' : null}>
					<a href={link.path}>
						<span>{link.label}</span>
					</a>
				</li>
			))
		}
	</nav>
</header>
